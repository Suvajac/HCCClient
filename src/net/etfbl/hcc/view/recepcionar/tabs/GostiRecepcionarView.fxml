<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" stylesheets="@../../../res/css/recepcionar_style.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.etfbl.hcc.controller.recepcionar.tabs.GostiRecepcionarController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colIme" prefWidth="75.0" text="Ime" />
                <TableColumn fx:id="colPrezime" prefWidth="75.0" text="Prezime" />
                  <TableColumn fx:id="colUsername" prefWidth="75.0" text="Korisničko ime" />
                  <TableColumn fx:id="colBrojTelefona" prefWidth="75.0" text="Broj tel." />
                  <TableColumn fx:id="colBrojSobe" prefWidth="75.0" text="Broj sobe" />
                  <TableColumn fx:id="colDatumOd" prefWidth="75.0" text="Datum od" />
                  <TableColumn fx:id="colDatumDo" prefWidth="75.0" text="Datum do" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleRacun" styleClass="my-button" text="Račun" />
                  <Button fx:id="btnRegistracija" mnemonicParsing="false" onAction="#handleRegistracija" text="Registracija" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</AnchorPane>
